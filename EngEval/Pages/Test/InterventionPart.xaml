<UserControl x:Class="EngEval.Pages.Test.InterventionPart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngEval.Pages.Test"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="1400">
    <DockPanel>
        <Border CornerRadius="20" BorderThickness="5" BorderBrush="LightSkyBlue" Margin="50 0 50 10" Background="LightSkyBlue" >
            <DockPanel>
                <Button Name="ForInter" Width="40" DockPanel.Dock="Left" FontSize="40" Content="&lt;" Margin="10 0 0 0" Background="LightSkyBlue" Click="ForInter_Click"></Button>
                <Button Name="BelInter" Width="40" DockPanel.Dock="Right" FontSize="40" Content="&gt;" Margin="0 0 10 0" Background="LightSkyBlue" Click="BelInter_Click"> </Button>
                <local:MediaPlayerControl x:Name="Inter_Audio" Height="30" DockPanel.Dock="Top"></local:MediaPlayerControl>
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="Inter_Text" TextWrapping="Wrap" FontSize="20" Foreground="Black"></TextBlock>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>
