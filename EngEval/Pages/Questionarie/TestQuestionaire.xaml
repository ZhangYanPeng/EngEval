<Window x:Class="EngEval.Pages.Questionarie.TestQuestionaire"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngEval.Pages.Questionarie"
        mc:Ignorable="d"
        Topmost="True"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Title="问卷" Height="800" Width="1000">
    <DockPanel>
        
        <GroupBox FontSize="20" BorderBrush="Gray" Margin="5">
            <GroupBox.Header>
                <TextBlock DockPanel.Dock="Top" FontSize="30" Height="40" TextAlignment="Center">测试调研</TextBlock>
            </GroupBox.Header>
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" FontSize="20" Height="40" TextAlignment="Center" >以下问卷主要用于了解学生的听力理解过程，请根据你的情况如实作答.</TextBlock>
                <TextBlock DockPanel.Dock="Top" FontSize="20" Height="40" TextAlignment="Center">①完全不符合 ②很不符合 ③不太符合 ④有点符合 ⑤比较符合 ⑥完全符合</TextBlock>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="30 0 30 0">
                    <ListBox HorizontalContentAlignment="Stretch">
                        <ListBoxItem>
                            <DockPanel>
                                <ComboBox DockPanel.Dock="Right" Width="100">
                                    <ComboBoxItem IsSelected="True" >请选择</ComboBoxItem>
                                    <ComboBoxItem>1</ComboBoxItem>
                                    <ComboBoxItem>2</ComboBoxItem>
                                    <ComboBoxItem>3</ComboBoxItem>
                                    <ComboBoxItem>4</ComboBoxItem>
                                    <ComboBoxItem>5</ComboBoxItem>
                                    <ComboBoxItem>6</ComboBoxItem>
                                </ComboBox>
                                <TextBox>你听力开始之前，我会根据题目来计划我应该如何去听。</TextBox>
                            </DockPanel>
                        </ListBoxItem>
                    </ListBox>
                </ScrollViewer>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</Window>
